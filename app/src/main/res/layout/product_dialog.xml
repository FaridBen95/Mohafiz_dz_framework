<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productItemContainer"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:minWidth="@dimen/catalog_product_size_large"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_image"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/catalog_product_size_large"/>

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/viewDetailsButton"
                    android:visibility="visible"
                    android:text="@string/view_details_label"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/margin_large"
                    style="?attr/textInputOutlinedDenseStyle"
                    android:layout_width="@dimen/edit_text_width_large"
                    android:layout_height="wrap_content"
                    android:hint="@string/quantity_label"
                    android:textColorHint="?attr/colorOnSurface"
                    app:boxBackgroundColor="?attr/colorSurfaceDim"
                    app:boxStrokeColor="?attr/colorOnSurface"
                    app:hintTextColor="?attr/colorOnSurface"
                    app:startIconTint="?attr/colorOnSurface"
                    app:endIconMode="clear_text"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/qtyTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="@dimen/text_size_medium"
                        android:inputType="number|numberDecimal"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/unitPriceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/padding_medium"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:layout_marginEnd="2dp"
                        android:text="@string/unit_price_label_"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/unitPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/totalPriceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/padding_medium"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:layout_marginEnd="2dp"
                        android:text="@string/total_price_label_"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/totalPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/availabilityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/padding_medium"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:layout_marginEnd="2dp"
                        android:text="@string/availability_label_"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/availabilityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:maxLines="2"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>