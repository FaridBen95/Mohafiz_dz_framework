<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentView">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mohafiz_dz_splash_screen_simple" />


    <LinearLayout
        android:layout_marginEnd="@dimen/default_8dp"
        android:layout_marginTop="@dimen/default_8dp"
        android:visibility="visible"
        android:background="@drawable/round_corner_white_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/languageLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:layout_marginVertical="@dimen/spacing_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="En"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/main_theme_primary_dark" />

            <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                app:tint="@color/main_theme_primary_dark" />


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/logo_up"
                android:layout_width="@dimen/backdrop_height1"
                android:layout_height="@dimen/backdrop_height1"
                android:layout_centerInParent="true"
                android:padding="@dimen/default_16dp"
                android:src="@mipmap/ic_launcher_foreground" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/intoAppContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_4dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/googleAnimationView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/orange_white"
                        app:cardCornerRadius="25dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/googleContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardBackgroundColor="@color/red_900"
                        app:cardCornerRadius="25dp">

                        <com.balysv.materialripple.MaterialRippleLayout
                            style="@style/RippleStyleWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/googleLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/spacing_large"
                                android:paddingTop="@dimen/spacing_large"
                                android:paddingEnd="@dimen/spacing_large"
                                android:paddingBottom="@dimen/spacing_large">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    app:srcCompat="@drawable/google"
                                    app:tint="@color/white" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/default_8dp"
                                        android:layout_marginEnd="@dimen/default_4dp"
                                        android:background="@color/transparent"
                                        android:drawablePadding="@dimen/spacing_large"
                                        android:gravity="start"
                                        android:lines="2"
                                        android:text="@string/continue_with_google"
                                        android:textAlignment="textStart"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                        android:textColor="@color/overlay_light_90"
                                        android:textSize="@dimen/text_size_small"
                                        android:textStyle="bold" />


                                </FrameLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="2" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>


                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_4dp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/emailContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_medium"
                        app:cardBackgroundColor="@color/orange_white"
                        app:cardCornerRadius="25dp">

                        <com.balysv.materialripple.MaterialRippleLayout
                            style="@style/RippleStyleWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/emailLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/spacing_large"
                                android:paddingTop="@dimen/spacing_large"
                                android:paddingEnd="@dimen/spacing_large"
                                android:paddingBottom="@dimen/spacing_large">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    app:srcCompat="@drawable/ic_baseline_alternate_email_24"
                                    app:tint="@color/black" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/default_8dp"
                                        android:layout_marginEnd="@dimen/default_4dp"
                                        android:background="@color/transparent"
                                        android:drawablePadding="@dimen/spacing_large"
                                        android:gravity="start"
                                        android:lines="2"
                                        android:text="@string/continue_with_email"
                                        android:textAlignment="textStart"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/text_size_small"
                                        android:textStyle="bold" />


                                </FrameLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="2" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>


                    </androidx.cardview.widget.CardView>
                </FrameLayout>


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_large" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:visibility="gone"
                app:cardBackgroundColor="@color/main_theme_primary_"
                app:cardCornerRadius="25dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/phoneLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingTop="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:paddingBottom="@dimen/spacing_large">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/ic_local_phone"
                            app:tint="@color/main_theme_primary_dark" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:drawablePadding="@dimen/spacing_large"
                                android:text="@string/continue_with_phone"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                android:textColor="@color/main_theme_primary_dark"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />


                        </FrameLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="2" />

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/termsOfUseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ms_tab_container_pre_lollipop_background"
                android:padding="@dimen/spacing_small"
                android:text="@string/terms_of_use_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>