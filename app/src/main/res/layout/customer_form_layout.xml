<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_no_logo_transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_black"
        app:navigationIconTint="?attr/colorOnSurface"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_xlarge"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_above="@id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            android:elevation="@dimen/elevation_medium"
            style="@style/Widget.App.CardView"
            android:layout_marginBottom="@dimen/margin_xxlarge"
            app:cardPreventCornerOverlap="false"
            app:strokeWidth="@dimen/default_4dp"
            app:strokeColor="?attr/colorSurfaceContainerHighest"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/padding_xxlarge"
                    android:paddingTop="@dimen/padding_xxlarge"
                    android:paddingBottom="@dimen/padding_xxxlarge">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/image_view_size_xlarge"
                        android:layout_height="@dimen/image_view_size_xlarge"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_add_photo_alternate_24"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textPersonName|textCapWords"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="phone"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/code_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/codeTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textPersonName"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/balance_limit_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/balanceLimitTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:text="0"
                            android:inputType="number"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/category_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        >
                        <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_small"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:id="@+id/categoryDropDownView"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/region_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        >
                        <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_small"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:id="@+id/regionDropDownView"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        android:id="@+id/gpsPositionInputLayout"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/gps_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/baseline_location_24"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:enabled="false"
                            android:id="@+id/gpsPositionTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="none"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addressTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textPersonName|textCapWords"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_large"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/note_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/noteTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/validateMaterialButton"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorSurfaceInverse"
                android:elevation="@dimen/elevation_low"
                android:text="@string/validate_label"
                app:iconTint="?attr/colorOnSurfaceInverse" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>