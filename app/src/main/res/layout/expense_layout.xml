<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_black"
        app:navigationIconTint="?attr/colorOnSurface"/>

    <RelativeLayout
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/name_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/expensesLimitContainer"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/expenses_limit_label"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/expensesLimitTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/expenses_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/expensesTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/allowedExpensesContainer"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/totalAmountLabelTextView"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/allowed_expenses_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/allowedAmountTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/currentExpenseContainer"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/paymentAmountLabelTextView"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/expense_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/expenseAmountTextview"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/expensesLeftContainer"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/expenses_left_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/expensesLeftTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subject_label"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        >
                        <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_small"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:id="@+id/subjectDropDownView"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/noteTextInputLayout"
                        style="?attr/textInputOutlinedDenseStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:textColorHint="?attr/colorOnSurface"
                        app:boxBackgroundColor="?attr/colorSurfaceDim"
                        app:boxStrokeColor="?attr/colorOnSurface"
                        app:hintTextColor="?attr/colorOnSurface"
                        app:startIconTint="?attr/colorOnSurface"
                        android:hint="@string/note_label"
                        app:endIconMode="clear_text"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/noteTextInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/attachmentsContainer"
                >

                <TextView
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/attachments_label_"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerView"
                    android:layout_marginStart="@dimen/margin_medium"
                    />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imagesFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_above="@id/paymentEditContainer"
            android:contentDescription="@string/create_account_label"
            app:srcCompat="@drawable/baseline_add_photo_alternate_24" />
        <FrameLayout
            android:id="@+id/paymentEditContainer"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_above="@id/validateFloatingActionButton">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/margin_large"
                android:contentDescription="@string/create_account_label"
                app:srcCompat="@android:drawable/ic_input_add" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_height="wrap_content"
                android:contentDescription="@string/create_account_label"
                app:srcCompat="@android:drawable/ic_menu_edit" />
            </FrameLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/validateFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/create_account_label"
            android:layout_marginBottom="@dimen/margin_large"
            app:srcCompat="@drawable/ic_check"/>

    </RelativeLayout>

</LinearLayout>