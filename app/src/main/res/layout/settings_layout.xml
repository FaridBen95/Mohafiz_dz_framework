<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_black"
        app:navigationIconTint="?attr/colorOnSurface"/>

    <RelativeLayout
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/company_name_label"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />

                        <TextView
                            android:id="@+id/companyNameTextView"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/name_label"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/join_date_label"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/joinDateTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/role_label"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/roleTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/companyQrCodeContainer"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        app:singleSelection="true"
                        android:id="@+id/toggleGroup"
                        >
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/distInviteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            style="?attr/materialButtonOutlinedStyle"
                            android:text="@string/distributor_invite_label"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/adminInviteButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?attr/materialButtonOutlinedStyle"
                            android:textSize="@dimen/text_size_small"
                            android:text="@string/admin_invite_label"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/adminButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?attr/materialButtonOutlinedStyle"
                            android:textSize="@dimen/text_size_small"
                            android:text="@string/admin_label"
                            />

                    </com.google.android.material.button.MaterialButtonToggleGroup>
                    <ImageView
                        android:id="@+id/qrCodeImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:contentDescription="@string/qr_code_label" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>