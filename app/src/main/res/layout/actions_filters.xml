<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_xlarge"
        android:paddingHorizontal="@dimen/padding_medium"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_gravity="end"
            app:icon="@drawable/ic_close"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderByGroupContainer"
            android:visibility="visible"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="@dimen/margin_medium"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    app:strokeColor="?attr/colorSurfaceContainerHighest"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardElevation="0dp"
                    >
                    <LinearLayout
                        android:paddingHorizontal="@dimen/padding_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/reverse_label"
                            android:paddingEnd="@dimen/padding_small"
                            android:layout_gravity="end"
                            android:id="@+id/reverseSwitch"
                            />
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/orderByRadioGroup"
                            >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_label"
                                android:id="@+id/dateRadioButton"
                                />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/customer_label"
                                android:id="@+id/customerRadioButton"
                                />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/distance_label"
                                android:id="@+id/distanceRadioButton"
                                />
                        </RadioGroup>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:layout_marginStart="1dp"
                    android:text="@string/order_by_label"
                    style="bold"
                    android:textColor="?attr/colorOnSurface"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filterGroupContainer"
            android:visibility="visible"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="@dimen/margin_medium"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    app:strokeColor="?attr/colorSurfaceContainerHighest"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    >
                    <LinearLayout
                        android:paddingHorizontal="@dimen/padding_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/datesContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:weightSum="2"
                            >
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/dateStartButton"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/date_start_label"
                                android:gravity="start|center_vertical"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_marginEnd="@dimen/margin_small"
                                />
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/dateEndButton"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/date_end_label"
                                android:gravity="start|center_vertical"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_marginStart="@dimen/margin_small"
                                />

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/distance_label"
                            >
                            <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_small"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:id="@+id/proximityDropDownView"
                                android:paddingHorizontal="@dimen/padding_small"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/customer_label"
                            >
                            <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_small"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:id="@+id/customerDropDownView"
                                android:paddingHorizontal="@dimen/padding_small"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/region_label"
                            >
                            <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_small"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:id="@+id/regionDropDownView"
                                android:paddingHorizontal="@dimen/padding_small"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/tour_label"
                            >
                            <com.MohafizDZ.framework_repository.controls.KeyValueAutoComplete
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_small"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:id="@+id/tourDropDownView"
                                android:paddingHorizontal="@dimen/padding_small"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_marginTop="@dimen/margin_medium"
                                style="?attr/textInputFilledStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="100dp"
                                app:strokeColor="?attr/colorSurfaceContainerHighest"
                                app:strokeWidth="1dp"
                                app:cardBackgroundColor="?attr/colorSurface"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="@dimen/padding_medium"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="@dimen/margin_medium"
                                        android:text="@string/actions_label"
                                        style="bold"
                                        android:textColor="?attr/colorOnSurface"
                                        />
                                    <com.google.android.material.materialswitch.MaterialSwitch
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/show_all_label"
                                        android:layout_gravity="end"
                                        android:checked="true"
                                        android:paddingEnd="@dimen/padding_small"
                                        android:id="@+id/allActionsSwitch"
                                        />

                                    <com.google.android.material.chip.ChipGroup
                                        android:id="@+id/actionsChipGroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/padding_large"
                                        />

                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </FrameLayout>


                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/margin_medium"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:layout_marginStart="1dp"
                    android:text="@string/filters_label"
                    style="bold"
                    android:textColor="?attr/colorOnSurface"
                    />
            </FrameLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/reset_label"
            android:id="@+id/resetButton"
            />

    </LinearLayout>

</ScrollView>