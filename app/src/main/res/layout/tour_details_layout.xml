<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_black"
        app:navigationIconTint="?attr/colorOnSurface"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginHorizontal="@dimen/margin_large">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_margin="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:gravity="end"
                            android:id="@+id/stateTextView"
                            android:textColor="?attr/colorError"
                            android:textStyle="bold"
                            android:text="@string/canceled_label"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />

                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/name_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />

                            <TextView
                                android:id="@+id/nameTextView"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_weight="1"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/vehicle_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />

                            <TextView
                                android:id="@+id/vehicleTextView"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_weight="1"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/region_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />

                            <TextView
                                android:id="@+id/regionTextView"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_weight="1"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:id="@+id/planDateContainer"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/plan_date_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:id="@+id/planDateTextView"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/startDateContainer"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/start_date_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:id="@+id/startDateTextView"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/preClosingDateContainer"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/pre_closing_date_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:id="@+id/preClosingDateTextView"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/closingDateContainer"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/closing_date_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:id="@+id/closingDateTextView"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/endDateContainer"
                            android:weightSum="2"
                            >
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_gravity="center"
                                android:text="@string/end_date_label_"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:id="@+id/endDateTextView"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/config_label"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    />

                <com.google.android.material.chip.ChipGroup
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chipGroup"
                    android:layout_marginStart="@dimen/margin_medium"
                    />



            </LinearLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>