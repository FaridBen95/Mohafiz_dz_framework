<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_low"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_black"
        app:navigationIconTint="?attr/colorOnSurface"/>

    <RelativeLayout
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/name_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />

                        <TextView
                            android:id="@+id/customerTextView"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/balance_limit_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/balanceLimitTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/balance_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/balanceTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/order_amount_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/orderAmountTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/totalAmountLabelTextView"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/total_to_pay_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/totalAmountTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/paymentContainer"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/paymentAmountLabelTextView"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/payment_amount_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/paymentAmountTextview"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_gravity="center"
                            android:text="@string/actual_balance_label_"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/actualBalanceTextView"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/validateFloatingActionButton"
            android:layout_marginStart="@dimen/margin_large"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:contentDescription="@string/create_account_label"
            app:srcCompat="@android:drawable/ic_input_add" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/validateFloatingActionButton"
            android:layout_marginStart="@dimen/margin_large"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:contentDescription="@string/create_account_label"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/validateFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/create_account_label"
            android:layout_marginBottom="@dimen/margin_large"
            app:srcCompat="@drawable/ic_check"/>

    </RelativeLayout>

</LinearLayout>