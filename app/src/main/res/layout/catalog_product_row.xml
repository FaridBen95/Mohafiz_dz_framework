<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productItemContainer"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="@dimen/catalog_product_size_medium"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_margin="@dimen/margin_small">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_image"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/catalog_product_size_medium"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dip"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_medium"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/badgeView"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/margin_medium"
                        />
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_medium"
                        android:id="@+id/priceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/availabilityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="@string/availability_label_"
                        android:layout_marginEnd="2dp"
                        android:textColor="?attr/colorPrimary"
                        />
                    <TextView
                        android:id="@+id/availabilityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_small"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>