    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.AppBarOverlay.actionbar">
        <item name="actionMenuTextColor">@color/black</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/android_grey_dark</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="actionMenuTextColor">@color/black</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/android_grey_dark</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/black</item>
    </style>

    <!-- Application theme. -->

    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert</item>
    </style>

    <!-- FIXME: Replace toolbar with appbar.. -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    //user profile


    <!--styles for profile-->

    //ecomerce x styles

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/grey_10</item>
    </style>

    <style name="EditText.White.Hint" parent="@style/EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey_10</item>
    </style>


    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <style name="PrimaryColor.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Color Primary will be toolbar color -->
        <item name="colorPrimary">@color/main_theme_primary</item>
        <!-- Color Primary Dark will be default status bar color -->
        <item name="colorPrimaryDark">@color/main_theme_primary_dark</item>
    </style>


    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>

    <style name="ProgressBarDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/main_theme_primary_dark</item>
    </style>
    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/shrineColorAccent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Toolbar</item>
    </style>
    <style name="TextAppearance.Shrine.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
